                        <label for="username">Username</label>
                        @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", @id = "username", @placeholder = "Username", @autofocus = "autofocus", @required = "required" })
                    </div>
                    <div class="form-group">
                        <label for="password">Password</label>
                        @Html.TextBoxFor(model => model.Password, new { @class = "form-control", @id = "password", @placeholder = "Password", @type = "Password", @required = "required" })
                    </div>
                    <div class="form-group">
                        <label class="form-remember">
                            @Html.CheckBoxFor(model => model.RememberMe)
                            Remember Me
                        </label><a class="form-recovery" href="#">Forgot Password?</a>
                    </div>
                    <div class="form-group">
                        <button type="submit">Log In</button>
                    </div>
