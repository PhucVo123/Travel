@using WebApplication5.Help
@model IEnumerable<WebApplication5.Models.Product>
<table class="table table-striped table-bordered table-hover" id="dataTables-example" style="width:100%">
    <thead>
        <tr>
            <th>
                STT
            </th>
            <th>
                Tên dịch vụ
            </th>
            <th>
                Hình
            </th>
            <th>
                Giá
            </th>
            <th>
                Hiển thị
            </th>
            <th>
                Vị trí
            </th>
            <th>
                Ngày đăng
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @{var Number = 1; }
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.Raw(Number++)
                </td>
                <td style="text-align:left; white-space:wrap">
                    @Html.DisplayFor(modelItem => item.namePackage)
                </td>
                <td>
                    <img src="~/Images/@item.img" width="50px" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.price)
                </td>
                <td>
                    @(item.hide == true ? "Hiển thị" : "Ẩn")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.order)
                </td>
                <td>
                    <!--Html.DisplayFor(modelItem => item.datebegin)-->
                    @(item.datebegin.HasValue ? item.datebegin.Value.ToString("dd/MM/yyyy") : "")
                </td>
                <td>
                    @Html.NoEncodeActionLink("<span class='fa fa-wrench'></span>", "Edit", "Edit", "Products", routeValues: new { id = item.id }, htmlAttributes: new { data_modal = "", @class = "btn btn-secondary" })
                    <br />
                    <br />
                    @Html.NoEncodeActionLink("<span class='fa fa-search'></span>", "Detail", "Details", "Products", routeValues: new { id = item.id }, htmlAttributes: new { data_modal = "", @class = "btn btn-primary" })
                    <br />
                    <br />
                    @Html.NoEncodeActionLink("<span class='fa fa-trash'></span>", "Delete", "Delete", "Products", routeValues: new { id = item.id }, htmlAttributes: new { data_modal = "", @class = "btn btn-danger" })

                </td>
            </tr>
        }
    </tbody>
</table>
<script>
        $(document).ready(function () {
            $('#dataTables-example').DataTable({
                responsive: true
            });
        });
</script>
