<!-- Blog Start -->
<div class="container-fluid py-5">
    <div class="container py-5">
        <div class="row">
            <div class="col-lg-12">
                <!-- Blog Detail Start -->
                <div class="pb-3">
                    <div class="blog-item">
                        <div class="position-relative">
                            <img class="img-fluid w-100" src="img/blog-1.jpg" alt="">
                            <div class="blog-date">
                                <h6 class="font-weight-bold mb-n1">01</h6>
                                <small class="text-white text-uppercase">Jan</small>
                            </div>
                        </div>
                    </div>
                    <div class="bg-white mb-3" style="padding: 30px;">
                        <div class="d-flex mb-3 pl-4">
                            <a class="text-primary text-uppercase text-decoration-none" href="">@Model.nameOfAdmin</a>
                            <span class="text-primary px-2">|</span>
                            <a class="text-primary text-uppercase text-decoration-none" href="">@Model.nameOfLink</a>
                        </div>
                        <h2 class="mb-3">@Model.nameNews</h2>

                        <p>
                            @Html.Raw(Model.content)
                        </p>

                        @*<h4 class="mb-3">Est dolor lorem et ea</h4>
                        <img class="img-fluid  float-left mr-4 mb-2" src="~/Images/@Model.imgNews" style=" height:250px; width:300px">
                        <p>
                            @Html.Raw(Model.content)
                        </p>
                        <h5 class="mb-3">Est dolor lorem et ea</h5>
                        <img class="img-fluid  float-right ml-4 mb-2" src="~/Images/@Model.imgNews" style=" height:250px; width:300px">
                        <p>
                            @Html.Raw(Model.content)
                        </p>*@
                    </div>
                </div>
                <!-- Blog Detail End -->
            </div>
        </div>
    </div>
</div>

<script>
    document.getElementsByTagName("img").className = "img-fluid"
    var images = document.getElementsByTagName("img");
    var i;

    for(i = 0; i < images.length; i++) {
        if (images[i].className != "w-100") {
            images[i].className += "img-fluid";
        }
        
    }
</script>